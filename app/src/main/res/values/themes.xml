<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ComposeForNewHorizons" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/artichoke</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/artichoke</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="android:statusBarColor" tools:targetApi="l" >@color/artichoke</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeForNewHorizons</item>
    </style>

</resources>